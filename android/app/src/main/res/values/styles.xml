<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Color de fondo del splash screen (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <!-- Icono animado del splash (logo) (Android 12+) -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Duración de la animación en milisegundos (Android 12+) -->
        <item name="android:windowSplashScreenAnimationDuration">200</item>
        <!-- Color de fondo para versiones anteriores a Android 12 -->
        <item name="android:background">@color/splash_background</item>
    </style>
</resources>